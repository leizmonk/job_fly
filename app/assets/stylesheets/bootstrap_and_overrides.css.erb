/* Button Settings */
.btn-primary { background-color: #D00053; border-color: transparent; }
.btn.btn-primary, .btn.btn-warning { margin-top: 5px; }
.btn-primary:hover { background-color: #00D07D; border-color: transparent; }

/* Footer Settings */
body { height: 100%; padding-bottom: 60px; }
footer .navbar-nav { padding: 5px 0 15px 0; }
.navbar-fixed-bottom { min-height: 60px; background-color: #000; color: #777; font-weight: normal; }
.navbar-fixed-bottom li { margin-left: 8%; }
.navbar-fixed-bottom.nav > li > a { padding: 3px 0 0 0 !important; }
.navbar-fixed-bottom.nav > li > a:hover { background: transparent !important; }

/* Header Settings */
.navbar-default { min-height: 80px; background-color: #000; border-bottom: 1px solid #333; margin-bottom: 0px; }
.navbar-logo { max-height: 50px; }
.navbar-nav { float: right; padding-top: 15px; font-size: 18px; }
.navbar-nav a:hover { color: #D00053 !important; }

/* Home Page Settings */
.row.home { font-size: 16px; }
#home-bottom-banner { 
	background: url(<%= asset_path 'office-darker-bg.png' %>) no-repeat center center fixed; 
	background-size: cover; 
	min-height: 300px;
}
#home-bottom-banner p, #home-top-banner p { color: #fff; font-weight: 200; }
#home-bottom-banner div, .home-middle div, #home-top-banner div { padding: 30px 10px; }
.home-middle { min-height: 300px; margin-left: 8%; margin-right: 8%; }
.home-middle h3 { text-align: center; }
.home-page-wrapper { width: 100%; margin-left: 0px !important; margin-right: 0px !important; }
#home-top-banner { 
	background: url(<%= asset_path 'la-skyscrapers-dark-bg.jpg' %>) no-repeat center center fixed; 
	background-size: cover; 
	min-height: 300px; 
}
.nav.share { display: inline-block; }

/* Job Listing Page Settings */
div.job-listings { padding: 10px 0 0 0; }
div.job-listings td { width: 33%; }
ul.notes-list { padding: 3px 0 0 0; }

/* Notes Settings */
h3.regular-header { margin-top: 0px !important; }
.new_note input, .new_note textarea { margin-top: 5px; min-width: 100%; }
.edit-notes label { padding-top: 10px; font-weight: bold; }
.edit-notes input, .edit-notes textarea, .edit-notes.btn-primary, .edit-notes.btn-warning { width: 50%; }

/* Registration Form Settings */
.sign-up-form { padding-bottom: 200px; }

/* Search Results Page */
.job-search-results span { padding: 0 15px 0 15px; }
.search-form label { padding-top: 10px; }
ul.job-search-results { padding: 8px 0 0 0; }

/* Typography Settings */
a:hover { color: #D00053; }
.big-link { font-size: 16px; }
body { font-family: 'Source Sans Pro', sans-serif; font-size: 14px; padding-bottom: 60px; background-color: #EEE; }
.complementary-header { color: #D00053; }
h1, h2, h3, h4, h5, h6, label { font-family: 'Lato', 'Arial', sans-serif; }
.job-listing-header, .section-header, .regular-header { color: #00D07D; }
.notes-list p, .job-listings p { line-height: 1em; }

@media screen and (max-width: 479px) {
  footer .navbar-nav { font-size: 12px; }
  footer ul.navbar-nav li { display: inline-block !important; }
  .navbar-fixed-bottom li { margin-left: 8%; }  
}
