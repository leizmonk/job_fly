/* Button Settings */
.btn-primary { background-color: #D00053; border-color: #fff; }
.btn.btn-primary { margin-top: 5px; }
.btn-primary:hover { background-color: #00D07D; border-color: #fff; }

/* Header Settings */
.navbar { min-height: 80px; }
.navbar-default { border-bottom: 1px solid #B1B1B1; }
.navbar-logo { max-height: 50px; }
.navbar-nav { float: right; padding-top: 12px; font-size: 18px; }
.navbar-nav a:hover { color: #D00053 !important; }

/* Home Page Settings */
.row.home { font-size: 16px; }
#home-bottom-banner { background: url(<%= asset_path 'office-dark-bg.jpg' %>) no-repeat center center fixed; min-height: 300px; }
#home-bottom-banner p, #home-top-banner p { color: #fff; font-weight: 200; }
#home-bottom-banner div, .home-middle div, #home-top-banner div { padding: 30px 10px; }
.home-middle { min-height: 400px; }
#home-top-banner { background: url(<%= asset_path 'la-skyscrapers-dark-bg.jpg' %>) no-repeat center center fixed; min-height: 300px; }

/* Job Listing Page Settings */
ul.job-listing-info { padding: 10px 0 0 0; }
ul.job-listing-info li { list-style-type: none; padding-top: 10px; }
ul.notes-list { padding: 3px 0 0 0; }

/* Notes Settings */
.new_note input, .new_note textarea { margin-top: 5px; min-width: 100%; }
.notes-list p { line-height: 1em; }

/* Search Results Page */
.job-search-results span { padding: 0 15px 0 15px; }
.search-form label { padding-top: 10px; }
ul.job-search-results { padding: 8px 0 0 0; }
ul.job-listing-info { padding: 10px 0 0 0; }

/* Typography Settings */
a:hover { color: #D00053; }
.complementary-header { color: #D00053; }
body { font-family: 'Source Sans Pro', sans-serif; font-size: 14px; }
.job-listing-header, .section-header, .regular-header { color: #00D07D; }
h1, h2, h3, h4, h5, h6 { font-family: 'Lato', 'Arial', sans-serif; }
label { font-weight: 400; }
